<StartGrid>:
	onrientation: "horizontal"
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				orientation: 'horizontal'
				BoxLayout:
					orientation: "horizontal"
					Label:
						text: "Name:"
					Label:
						id: label_list_name
						text_size: self.width, self.height
						valign: "center"
						halign: "center"
				Button:
					text: "Select Army List"
					on_press: root.select_army_list()
			BoxLayout:
				orientation: "horizontal"
				Label:
					text: "Nationality:"
				Label:
					id: label_nationality
					text_size: self.width, self.height
					valign: "center"
					halign: "center"
				Label:
					text: "Theater Selector:"
				Label:
					id: label_theater_selector
					text_size: self.width, self.height
					valign: "center"
					halign: "center"
			BoxLayout:
				orientation: "horizontal"
				Label:
					text: "Initial Cost:"
				Label:
					id: label_initial_cost
					text: "0"
				Label:
					text: "Current Cost:"
				Label:
					id: label_current_cost
					text: "0"
				Label:
					text: "Current Value:"
				Label:
					id: label_current_value
					text: "0"
			BoxLayout:
				orientation: "horizontal"
				Label:
					text: "Logistics Points:"
				Label:
					id: label_logistics_points
					text: "0"
				Button:
					text: "Cange Logistics Points"
					on_press: root.open_logistics_points_popup()
					text_size: self.width, self.height
					valign: "center"
					halign: "center"
				Button:
					text: "Delete Army Lists"
					on_press: root.delete_army_lists()
					text_size: self.width, self.height
					valign: "center"
					halign: "center"
		Button:
			text: "Start Game"
			on_press: root.start_game()
		Label:
			text: "Please ignore me!"
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "There Might Be Dragons!"

<GameGrid>:
	cols: 2
	orientation: 'horizontal'
	Label:
		text: 'this will become a game...'
	Button:
		text: 'press'
		on_press: root.switch()

<SelectableLabel>:
	canvas.before:
		Color:
			rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
		Rectangle:
			pos: self.pos
			size: self.size


<SelectableListing>:
	id: army_listing
	viewclass: "SelectableLabel"
	SelectableRecycleBoxLayout:
		default_size: None, dp(56)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'

<PopupButton@Button>:
	size_hint: 1, 1

<DropDownButton>:
	size_hint_y: None
	height: "25pt"

<ChangeNumberPopup>:
	title: "Change some number"
	size_hint: .3, .3
	change_by: 0
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "horizontal"
			Label:
				text: "Change by:"
			TextInput:
				text: ""
				id: textinput_number
				input_filter: "int"
				multiline: False
		BoxLayout:
			orientation: "horizontal"
			Button:
				text: "Cancel"
				on_press: root.dismiss()
			Button:
				text: "Change"
				on_press: root.change()

<ArmySelectPopup>:
	id: popup_select_army_list
	title: "Select an Army List"
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			id: army_listing_container
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .15
			PopupButton:
				text: "Create new Army List"
				on_press: root.create_new_army_list(args)
			PopupButton:
				text: 'Cancel'
				on_press: root.dismiss()
			PopupButton:
				text: "Ok"
				on_press: root.ok()

<NewArmyListPopup>:
	title: 'Create new Army List'
	size_hint: .5, .5
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			# size_hint_y: None
			# height: pt(25)
			Label:
				text: 'Name'
			TextInput:
				id: textinput_name
				multiline: False
				on_text_validate: root.ok()
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Nationality'
			Button:
				id: button_nation_selection
				text: 'select'
		BoxLayout:
			orientaiton: 'horizontal'
			Label:
				text: 'Theater Selector'
			Button:
				id: button_theater_selector
				text: ''
		BoxLayout:
			orientaiton: 'horizontal'
			size_hint: 1, 1
			PopupButton:
				text: 'Cancel'
				on_press: root.cancel()
			PopupButton:
				text: 'Ok'
				on_press: root.ok()

<ArmyListDeletePopup>:
	title: "Delete army lists"
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			id: army_listing_container
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .15
			Button:
				text: 'Cancel'
				on_press: root.dismiss()
			Button:
				text: 'Delete'
				on_press: root.delete()

<MessagePopup>:
	#size: 300, 200
	size_hint: .5, .5
	BoxLayout:
		orientation: 'vertical'
		Label:
			id: label_message
			text_size: self.width-20, self.height-20
			valign: 'middle'
			halign: 'center'
		Button:
			text: 'Ok'
			size_hint: 1, .6
			on_press: root.dismiss()

<ConfirmationPopup>:
	size: 300, 200
	size_hint: .5, .5
	BoxLayout:
		orientation: 'vertical'
		Label:
			id: label_message
			text_size: self.width-20, self.height-20
			valign: 'middle'
			halign: 'center'
		BoxLayout:
			size_hint: 1, .6
			Button:
				text: 'Cancel'
				on_press: root.dismiss()
			Button:
				text: 'Ok'
				on_press: root.ok()
