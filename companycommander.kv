<StartGrid>:
	cols: 2
	Button:
		text: "press"
	Label:
		id: label_current_list
	Button:
		text: "Select Army List"
		on_press: root.select_army_list(args)

<SelectableLabel>:
	canvas.before:
		Color:
			rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
		Rectangle:
			pos: self.pos
			size: self.size


<SelectableListing>:
	id: army_listing
	viewclass: "SelectableLabel"
	SelectableRecycleBoxLayout:
		default_size: None, dp(56)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'
		multiselect: False
		touch_multiselect: False

<PopupButton@Button>:
	size_hint: 1, 1

<ArmySelectPopup>:
	id: popup_select_army_list
	title: "Select an Army List"
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			id: army_listing_container
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .15
			PopupButton:
				text: "Create new Army List"
				on_press: root.create_new_army_list(args)
			PopupButton:
				text: 'Cancel'
				on_press: root.dismiss()
			PopupButton:
				text: "Ok"
				on_press: root.ok()

<NewArmyListPopup>:
	title: 'Create new Army List'
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Label:
				text: 'Name'
			TextInput:
				id: textinput_name
				multiline: False
				on_text_validate: root.ok()
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Nationality'
			BoxLayout:
				id: layout_nation_selection
		BoxLayout:
			orientaiton: 'horizontal'
			size_hint: 1, .15
			PopupButton:
				text: 'Cancel'
				on_press: root.cancel()
			PopupButton:
				text: 'Ok'
				on_press: root.ok()

<MessagePopup>:
	size: 300, 200
	size_hint: None, None
	BoxLayout:
		orientation: 'vertical'
		Label:
			id: label_message
			text_size: self.width-20, self.height-20
			valign: 'middle'
			halign: 'center'
		Button:
			text: 'Ok'
			size_hint: 1, .6
			on_press: root.dismiss()
